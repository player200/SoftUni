@model CreateCarsModel
@{
    ViewData["Title"] = "Create car";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel"></label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance"></label>
                <input asp-for="TravelledDistance" class="form-control" />
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllParts"></label>
                <select asp-for="SelectedParts" asp-items="Model.AllParts" multiple class="form-control parts-select"></select>
            </div>
            <div>
                <input class="btn btn-success" type="submit" name="Add Car" />
            </div>
        </form>
    </div>
</div>
