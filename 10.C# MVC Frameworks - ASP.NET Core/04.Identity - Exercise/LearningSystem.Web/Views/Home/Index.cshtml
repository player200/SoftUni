@model HomeIndexViewModel
@{
    ViewData["Title"] = "Active Courses";
}

<div class="jumbotron">
    <h1 class="text-center">Wellcome to learning system!</h1>
</div>

<div class="row">
    <form asp-action="Search">
        <div class="col-md-6">
            <input asp-for="SearchInText" class="form-control" placeholder="Search..." />
        </div>
        <div class="col-md-2">
            <input asp-for="SearchInCourses" />
            <label asp-for="SearchInCourses"></label>
        </div>
        <div class="col-md-2">
            <input asp-for="SearchInUsers" />
            <label asp-for="SearchInUsers"></label>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default" value="Search" />
        </div>
    </form>
</div>
<br />
<br />

<div class="row home-page">
    @foreach (var course in Model.Courses)
    {
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                </div>
                <div class="panel-body">
                    @course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()
                </div>
            </div>
        </div>
    }
</div>